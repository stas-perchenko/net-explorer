<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="Text">
    </style>

    <style name="Text.ItemSectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_enabled_dark</item>
    </style>

    <style name="Text.ItemProperty">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.ItemProperty.Name">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_enabled_dark</item>
    </style>

    <style name="Text.ItemProperty.Value">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.ItemProperty.Value.SelectableNeutral">
        <item name="android:textColor">@color/text_color_selectable_neutral</item>
    </style>

    <style name="Text.ItemProperty.Value.SelectableGreen">
        <item name="android:textColor">@color/text_color_selectable_green</item>
    </style>

    <style name="Text.ItemProperty.Value.SelectableRed">
        <item name="android:textColor">@color/text_color_selectable_red</item>
    </style>


</resources>
